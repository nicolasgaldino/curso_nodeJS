<h1>Editando: {{user.name}}</h1>
<form action="/users/update" method="POST">
  <input type="hidden" name="id" value="{{user.id}}" />
  <div class="form-control">
    <label for="name">Name:</label>
    <input
      type="text"
      name="name"
      placeholder="Digite seu nome"
      value="{{user.name}}"
    />
  </div>
  <div class="form-control">
    <label for="occupation">Ocupação:</label>
    <input
      type="text"
      name="occupation"
      placeholder="Digite sua profissão"
      value="{{user.occupation}}"
    />
  </div>
  <div class="form-control form-checkbox">
    {{#if user.newsletter}}
      <input type="checkbox" name="newsletter" checked />
    {{else}}
      <input type="checkbox" name="newsletter" />
    {{/if}}
    <label for="newsletter">Enviar promoções?</label>
  </div>
  <input type="submit" value="Editar" />
</form>
<div class="address-container">
  <h2>Endereço:</h2>
  <form action="/address/create" method="POST">
    <input type="hidden" name="UserId" value="{{user.id}}" />
    <div class="form-control">
      <label for="street">Rua:</label>
      <input type="text" name="street" placeholder="Digita a rua" />
    </div>
    <div class="form-control">
      <label for="number">Número:</label>
      <input
        type="text"
        name="number"
        placeholder="Digita o número da residência"
      />
    </div>
    <div class="form-control">
      <label for="city">Cidade:</label>
      <input type="text" name="city" placeholder="Digita sua cidade" />
    </div>
    <input type="submit" value="Incluir endereço" />
  </form>
  <div class="address-list">
    <h2>Lista de endereços:</h2>
    {{#each user.Addresses}}
      <p>#{{this.id}} - {{this.street}} - {{this.number}} - {{this.city}}</p>
    {{/each}}
  </div>
</div>